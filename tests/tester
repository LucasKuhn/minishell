#!/bin/bash

YELLOW="\033[0;33m"
GREY="\033[38;5;244m"
PURPLE="\033[1;35m"
BLUE="\033[0;36m"
RED="\e[0;31m"
END="\033[0m"
FILENAME="tests_list"

printf "\n"
printf "$YELLOW"
echo "****************** MINISHELL TESTER ******************"
printf "\n"

PROMPT=$(echo -e "\nexit\n" | ./minishell | head -n 1 | sed -r "s:\x1B\[[0-9;]*[mK]::g")

i=0
while read teste
do
	((i++))
	MINI_OUTPUT=$(echo -e "$teste\n\nexit\n" | ./minishell | sed -r "s:\x1B\[[0-9;]*[mK]::g" | grep -v "$PROMPT" | grep -v ^exit$)
	MINI_EXIT_CODE=$(echo -e "$teste\necho \$?\nexit\n" | ./minishell | sed -r "s:\x1B\[[0-9;]*[mK]::g" | grep -v "$PROMPT" | tail -n 2 | grep -v ^exit$)

	BASH_OUTPUT=$(bash -c "$teste")
	BASH_EXIT_CODE=$(echo $?)

	printf "$BLUE"
	printf "Test %3s: " $i
	if [[ "$MINI_OUTPUT" == "$BASH_OUTPUT" && "$MINI_EXIT_CODE" == "$BASH_EXIT_CODE" ]]; then
		printf ‚úÖ
		((ok++))
	else
		printf ‚ùå
	fi
	printf "$GREY $teste \n"
	if [ "$MINI_OUTPUT" != "$BASH_OUTPUT" ]; then
		echo mini output = $MINI_OUTPUT
		echo bash output = $BASH_OUTPUT
	fi
	if [ "$MINI_EXIT_CODE" != "$BASH_EXIT_CODE" ]; then
		echo mini exit_code = $MINI_EXIT_CODE
		echo bash exit_code = $BASH_EXIT_CODE
	fi
	printf $END
	# echo -e "________________________________________________________________\n"
done < tests/$FILENAME

printf $PURPLE
printf "$ok/$i\n"
if [[ "$ok" == "$i" ]]; then
	echo "üéä üéä üéä"
	echo "üòé üòé üòé"
	echo "üéâ üéâ üéâ"
else
	echo "üò≠ üò≠ üò≠"
fi
printf $END
